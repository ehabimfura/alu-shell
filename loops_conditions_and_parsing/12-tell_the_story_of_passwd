#!/usr/bin/env bash
# Read the /etc/passwd file line-by-line, splitting on colons
while IFS=: read -r USERNAME PASSWORD UID GID INFO HOME_DIRECTORY SHELL; do
    
    # Check if the USERNAME field is not empty, to skip any blank lines
    if [[ -n "$USERNAME" ]]; then
        # Use the `echo` command to print the formatted output for each user
        echo "The user $USERNAME is part of the $GID gang, lives in $HOME_DIRECTORY and rides $SHELL."
        echo "$UID's place is protected by the passcode $PASSWORD, more info about the user here: $INFO"
        echo ""  # Add a blank line for readability between entries
    fi
done < /etc/passwd
